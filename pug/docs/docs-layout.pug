doctype html
html(lang="pt-br")
	head
		include /utilities/_head.pug
	body.line-numbers


		// HEADER 
		#header
			include /utilities/_navbar.pug
			+navbar-mixin('navbar-light', 'btn-primary')
			#breadcrumbs.container
				.row
					.col
						hr.mt-10
						include /utilities/_breadcrumb.pug
						+breadcrumb-mixin('text-muted', ['Home', 'Documentação'])

		
		// CONTENTd
		.container.pt-2

				.row
					#menu-mobile.col-lg-4.col-md-12.col-sm-12.pb-lg-10.d-lg-none.d-xl-none

						.card.accordion.py-2.px-3.border-primary
							a.card-header.btn.btn-link.px-1.py-1.mb-0.text-dark.collapsed.lead.border-0.text-left.rounded.d-flex(href="#" data-toggle='collapse', data-target="#a", aria-expanded='true', aria-controls="a", id= "q")
								span.lead.text-primary.mb-0.pb-0.mr-5 Conteúdo
							.card-body.collapse.text-muted.pt-0.pb-0.px-1.border-0(id= "a", aria-labelledby = "q")
					
								ul.mx-0.px-0.pt-4.list-unstyled
									li.mb-3
										span.initialism Começando
									li.mb-2
										a.btn-link.text-primary(href='/docs/comecando/introducao.html')
											| Introdução
									li.mb-2
										a.btn-link.text-primary(href='/docs/comecando/changelog.html')
											| Changelog
											small.mb-1.ml-1
												mark.bg-white.border.border-gray.text-muted.rounded-lg.px-2.font-weight-normal 2.0.0
									li.mb-2
										a.btn-link.text-primary(href='/docs/comecando/suporte.html')
											| Suporte

								

				.row
					#menu.col-lg-4.col-md-12.col-sm-12.pb-lg-10.d-none.d-lg-block.d-xl-block

						ul.mx-0.px-0.pt-12.list-unstyled
							li.mb-3
								span.initialism Começando
							li.mb-2
								a.btn-link.text-primary(href='/docs/comecando/introducao.html')
									| Introdução
							li.mb-2
								a.btn-link.text-primary(href='/docs/comecando/changelog.html')
									| Changelog
									small.mb-1.ml-1
										mark.bg-white.border.border-gray.text-muted.rounded-lg.px-2.font-weight-normal 2.0.0
							li.mb-2
								a.btn-link.text-primary(href='/docs/comecando/suporte.html')
									| Suporte

						

					#text.col-lg-8.col-md-12.col-sm-12.pt-12.pb-12
						block content
						hr.mt-5.mb-4 
						span.text-muted Version 2.0.0,
							|
							|
							a.text-muted(href="mailto:hello@getreplacer.com") hello@getreplacer.com


		// FOOTER
		include /utilities/_footer.pug
		// light-footer(lead_bg_color, lead_border_color, lead_text_color, lead_btn_color, footer_bg, title_bg, text_color, link_color, subscribe_bg, subscribe_button, logo_file)
		+light-footer('bg-light', '', '', 'btn-secondary', 'bg-white', 'text-dark', 'text-muted', 'text-muted', '', 'btn-gray', '/images/logo-popfacil-color-footer.png')

		include /utilities/_scripts.pug